# bash functions common to the vosa commands
# specifically functions to aid parsing boot.conf files

boot_config_memory=
boot_config_processor_affinity=
boot_config_vnc_port=
boot_config_bridge=


function boot_config_memory() {
  boot_config_memory=$1
}

function boot_config_processor_affinity() {
  boot_config_processor_affinity=$1
}

function boot_config_vnc_port() {
  boot_config_vnc_port=$1
}

function boot_config_bridge() {
  boot_config_bridge=$1
}

